<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ResumeApp.Title" parent="">
        <item name="android:fontFamily">@font/oxygen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResumeApp.Label" parent="">
        <item name="android:fontFamily">@font/oxygen</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResumeApp.Body" parent="">
        <item name="android:fontFamily">@font/oxygen</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ResumeApp.Toolbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ResumeApp.Card" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="ResumeApp.Button" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/ResumeApp.Label</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ResumeApp.FloatingButton" parent="ResumeApp.Button">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:elevation">12dp</item>
    </style>

    <style name="ResumeApp.Editor" parent="">
        <item name="android:fontFamily">@font/oxygen</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResumeApp.EditorButton" parent="">
        <item name="android:fontFamily">@font/oxygen</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>