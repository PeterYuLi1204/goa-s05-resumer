<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_navigation"
        style="@style/ResumeApp.Toolbar"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/title"
            style="@style/ResumeApp.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_profile"
            android:textColor="@color/white" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/top_navigation">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        style="@style/ResumeApp.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_resume_builder"
            style="@style/ResumeApp.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="0dp"
            android:paddingVertical="16dp"
            android:text="@string/title_your_resumes"
            app:cornerRadius="0dp"
            app:icon="@drawable/file_text"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconSize="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_profile"
            style="@style/ResumeApp.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:paddingHorizontal="0dp"
            android:paddingVertical="16dp"
            android:text="@string/title_profile"
            app:cornerRadius="0dp"
            app:icon="@drawable/user"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconSize="16dp" />

    </LinearLayout>

</RelativeLayout>