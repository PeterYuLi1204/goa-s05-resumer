<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_blue"
    tools:context=".resume_editor.ResumePreviewActivity">

    <LinearLayout
        android:id="@+id/top_navigation"
        style="@style/ResumeApp.Toolbar"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left"
            android:backgroundTint="@color/white"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/title"
            style="@style/ResumeApp.Title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_discussion"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share"
            android:backgroundTint="@color/white"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/button_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/download"
            android:backgroundTint="@color/white"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_navigation">

        <!--This layout is LETTER SIZE (8.5" 11")-->
        <LinearLayout
            android:id="@+id/template"
            android:layout_width="612px"
            android:layout_height="792px"
            android:layout_gravity="center"
            android:background="@color/white"
            android:padding="40px"
            tools:ignore="PxUsage">

            <LinearLayout
                android:layout_width="320px"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resume_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/app_name"
                    android:textSize="36px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px">

                    <TextView
                        android:id="@+id/resume_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text"
                        android:textSize="10px" />

                    <Space
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/resume_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text"
                        android:textSize="10px" />

                    <Space
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/resume_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text"
                        android:textSize="10px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/resume_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="@string/placeholder_text"
                    android:textSize="10px" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/resume_header_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/header_experience"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/resume_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="@string/placeholder_text"
                    android:textSize="10px" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/resume_header_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/header_education"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/resume_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="@string/placeholder_text"
                    android:textSize="10px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="172px"
                android:layout_height="match_parent"
                android:layout_marginStart="40px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resume_header_certifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/header_certifications"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/resume_certifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="@string/placeholder_text"
                    android:textSize="10px" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/resume_header_awards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/header_awards"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/resume_awards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="@string/placeholder_text"
                    android:textSize="10px" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/resume_header_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/header_skills"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/resume_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="@string/placeholder_text"
                    android:textSize="10px" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>